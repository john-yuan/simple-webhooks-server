{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "lib": [
      "DOM",
      "ES5",
      "ES2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "lib/**/*.ts"
  ]
}
